local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")

local Library = {}

function Library:Window(GameName, ToggleKey)
    GameName = GameName or "Unknown"
    ToggleKey = ToggleKey or Enum.KeyCode.LeftAlt

    -- Rest of your code for creating the GUI ...

    -- Effects ...

    local function ToggleGUI()
        FatherFrameOutline.Visible = not FatherFrameOutline.Visible
    end

    UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
        if not gameProcessedEvent and input.KeyCode == ToggleKey then
            ToggleGUI()
        end
    end)
end

return Library
